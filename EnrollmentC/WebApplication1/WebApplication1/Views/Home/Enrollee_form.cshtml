@model enrollees
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Enrollee_form</title>
    <link rel="stylesheet" type="text/css" href="~/Styles/StyleSheet.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
</head>
<body>
    <div class="pannel panel-success">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
            @Html.ValidationSummary()
            <input type="hidden" name="ID" value="@Model.ID" />
            <div class="form-group">
                <label>Your name:</label>@Html.TextBoxFor(e => e.name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your surname:</label>@Html.TextBoxFor(e => e.surname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your patronymic:</label>@Html.TextBoxFor(e => e.patronymic, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your email(login):</label> @Html.TextBoxFor(e => e.email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your password:</label> @Html.TextBoxFor(e => e.password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your country:</label> @Html.TextBoxFor(e => e.country, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your city:</label> @Html.TextBoxFor(e => e.locality, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your adress:</label> @Html.TextBoxFor(e => e.address, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your birthdate:</label> @Html.TextBoxFor(e => e.birthdate, new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn-success" type="submit" value="Add/Update">
            </div>
            }
            @using (Html.BeginForm("Delete", "Home"))
            {
            <input type="hidden" name="ID" value="@Model.ID" />
            <div class="text-center">
                <input class="btn-danger" type="submit" value="Delete">
            </div>
            }
        </div>
        </div>
</body>
</html>
