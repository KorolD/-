#ifndef StackH
#define StackH Stack

#ifndef vclH
#define vclH vcl

#include <vcl.h>
#include <string>

#endif

struct Item{
	struct Item* next;
	int key;
	String data;
};

class ItemStack{
	public:
	ItemStack();
	~ItemStack();
	struct Item* FindKey(int k);
	void DeleteKey(int key);
	void Add(int key, String data);
	String Show();
	int LessThanOrEq(double average);
	double Average();
	bool IsEmpty();
	int GetAmount();

	private:
	struct Item* stack_ptr;
};

#endif
